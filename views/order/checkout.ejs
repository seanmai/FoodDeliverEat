<% include ../partials/header %>

<!-- The foods that was passed in is the generated array from carts object -->
<% if(foods && session.cart.totalQty > 0){ %>
    <div class="base">
        <div class="backgroundContainer col-md-12">

        </div>
        <div class="addressContainer col-md-4">
            <p>Hello</p>
        </div>
        <div class="orderContainer col-md-4">
            <ul class="list-group">
                <% foods.forEach(function(food){ %>
                    <li class="list-group-item">
                        <!-- <input type="number" name="qty" value="<%= food.qty %>"> -->
                        <div style="width: 500px;">
                            <div style="float: left; width: 30px;">
                                <select class="qty" name=""></select>
                            </div>
                            <div class="description" style="float: left; width: 100px;">
                                <strong><%= food.item.name %></strong>

                            </div>
                            <div class="price" style="float: left; width: 100px;">
                                <span>$<%= food.price %></span>
                            </div>
                            <div class="remove">
                                <a href="/checkout/cart-remove/<%= food.item._id %>" style="text-decoration: none;">X</a>
                            </div>

                        </div>
                    </li>
                    <% }); %>
                </ul>
                <strong>Total: <%= totalPrice %></strong>
                <hr>
                <a href="/checkout" type="button" class="btn btn-success">Place order</a>
        </div>
    </div>
<% } else { %>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>There is nothing in your cart</h2>
        </div>
    </div>
<% } %>

<% include ../partials/footer %>

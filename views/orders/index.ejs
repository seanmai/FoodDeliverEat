<% include ../partials/header %>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <% orders.forEach(function(order){ %>
            <div class="thumbnail" style="margin-top: 20px; ">
                <div class="subdiv">
                    <h1><%= order.name %></h1>
                    <p><%= order.phone %></p>
                    <% for(var id in order.cart.items){ %>
                        <p><%= order.cart.items[id].item.name %></p>
                    <% } %>
                </div>
            </div>
            <a href="https://www.google.com/maps/?q=<%= order.lat %>, <%= order.lng %>" class="btn btn-lg btn-success"></a>
        <% }); %>
    </div>
</div>

<script>
    nav = navigator.geolocation;
    nav.getCurrentPosition(success, failure);

    function success(position){
        var lat = position.coords.latitude;
        var lng = position.coords.longitude;
        alert(lat);
        alert(lng);
    }

    function failure(){
        alert("Could not get location.");
    }
</script>
<% include ../partials/footer %>

<% include ../partials/header %>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <% orders.forEach(function(order){ %>
            <div class="thumbnail" style="margin-top: 20px; ">
                <div class="subdiv">
                    <h1><%= order.name %></h1>
                    <p><%= order.phone %></p>
                    <p><%= order.deliveryTime %></p>
                    <% for(var id in order.cart.items){ %>
                        <p><%= order.cart.items[id].item.name %></p>
                    <% } %>
                </div>
                <a href="https://www.google.com/maps/?q=<%= order.lat %>, <%= order.lng %>" target="_blank" class="btn btn-lg btn-success"></a>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
